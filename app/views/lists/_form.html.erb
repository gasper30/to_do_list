<% if @list.errors.present? %>
  <ul>
    <% @list.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end%>

<div class="form container">
  <%= form_for @list do |f| %>
    <div class="form-group">
      <%= f.label :name, "名稱" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :duedate, "預定完成日期" %>
      <%= f.text_field :duedate, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :note, "代辦事項說明" %>
      <%= f.text_field :note, class: "form-control" %>
    </div>
       <%= f.submit %>
  <% end %>

  <div button type="button">
  <%= link_to '回首頁', lists_path, class: "btn btn-outline"%>
  </div>
</div>