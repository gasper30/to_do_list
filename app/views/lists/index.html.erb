<table class="table table-striped table-condensed">

  <thead>
    <tr>
      <th scope="col">工作項目</th>
      <th scope="col">顯示</th>
      <th scope="col">編輯</th>
      <th scope="col">刪除</th>
    </tr>
  </thead>

 <% @lists.each do |list| %>
   <tr>
     <td><%= list.name %></td>
     <td><%= link_to 'Show', list_path(list) %>
     </td>
     
     <td><%= link_to 'Edit', edit_list_path(list) %></td>
     <% if list.duedate > Date.today %>
        <td><%= link_to 'Destroy', list_path(list), method: :delete, data:{ confirm: "確定刪除嗎?" } %></td>
      <% else %>
        <td><%= link_to '已過期' %></td>
      <% end %>
   </tr>
 <% end %>
</table>



